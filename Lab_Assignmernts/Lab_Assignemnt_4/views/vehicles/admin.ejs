<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Vehicles</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { padding: 20px; }
    img.thumb { width: 60px; height: 40px; object-fit: cover; }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="mb-4">Manage Vehicles</h2>
    <a href="/vehicles/admin/new" class="btn btn-success mb-3">+ Add Vehicle</a>
    <table class="table table-bordered table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Brand</th>
          <th>Type</th>
          <th>Price</th>
          <th>Image</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% vehicles.forEach(vehicle => { %>
          <tr>
            <td><%= vehicle.name %></td>
            <td><%= vehicle.brand %></td>
            <td><%= vehicle.type %></td>
            <td>â‚¬<%= vehicle.price %></td>
            <td><img src="/uploads/<%= vehicle.image %>" class="thumb"></td>
            <td>
              <a href="/vehicles/admin/edit/<%= vehicle._id %>" class="btn btn-warning btn-sm">Edit</a>
              <form action="/vehicles/admin/delete/<%= vehicle._id %>" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
