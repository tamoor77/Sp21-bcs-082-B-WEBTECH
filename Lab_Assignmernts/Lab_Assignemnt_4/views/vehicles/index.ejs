<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Vehicles</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { padding: 20px; }
    .card-img-top { height: 200px; object-fit: cover; }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="mb-4">Available Vehicles</h2>
    <div class="row">
      <% vehicles.forEach(vehicle => { %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <img src="/uploads/<%= vehicle.image %>" class="card-img-top" alt="<%= vehicle.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= vehicle.name %> - <%= vehicle.brand %></h5>
              <p class="card-text">Type: <%= vehicle.type %></p>
              <p class="card-text">Price: â‚¬<%= vehicle.price %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
